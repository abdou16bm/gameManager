
<%- include ("layouts/header.ejs") %>


<h2 class="mb-3">product add </h2><form id="product_add_form" class="needs-validation" method="post" enctype="multipart/form-data" novalidate>

    <div class="row g-3">

        <div class="col-lg-6 col-sm-6 col-12">
            <label for="product_ref" class="form-label">product_ref</label>
            <input type="text" class="form-control" name="product_ref" id="product_ref" placeholder="product_ref" value="" required input_add>
            <div class="invalid-feedback">
                Valid product_ref is required.
            </div>
        </div>

        <div class="col-lg-6 col-sm-6 col-12">
            <label for="product_name" class="form-label">product_name</label>
            <input type="text" class="form-control" name="product_name" id="product_name" placeholder="product_name" value="" required input_add>
            <div class="invalid-feedback">
                Valid product_name is required.
            </div>
        </div>

        <div class="col-lg-6 col-sm-6 col-12">
            <label for="product_desig" class="form-label">product_desig</label>
            <input type="text" class="form-control" name="product_desig" id="product_desig" placeholder="product_desig" value="" required input_add>
            <div class="invalid-feedback">
                Valid product_desig is required.
            </div>
        </div>

        <div class="col-lg-6 col-sm-6 col-12">
            <label for="product_price" class="form-label">product_price</label>
            <input type="text" class="form-control" name="product_price" id="product_price" placeholder="product_price" value="" required input_add>
            <div class="invalid-feedback">
                Valid product_price is required.
            </div>
        </div>

        <div class="col-lg-6 col-sm-6 col-12">
            <label for="product_pic_count" class="form-label">product_pic_count</label>
            <input type="text" class="form-control" name="product_pic_count" id="product_pic_count" placeholder="product_pic_count" value="" required input_add>
            <div class="invalid-feedback">
                Valid product_pic_count is required.
            </div>
        </div>

        <div class="col-lg-6 col-sm-6 col-12">
            <label for="cat_id" class="form-label">cat_id</label>
            <select type="input_type" class="form-control" name="cat_id" id="cat_id" placeholder="cat_id" required input_add>
                            <% if (typeof foreignDatasObj.cat_id != 'undefined' && foreignDatasObj.cat_id.length > 0 ){
                for(var i = 0;i < foreignDatasObj.cat_id.length;i++) { %>
                <option value="<%= foreignDatasObj.cat_id[i].cat_id %>" ><%= foreignDatasObj.cat_id[i].table_row %></option>
                <% }} %>          </select>
            <div class="invalid-feedback">
                Valid cat_id is required.
            </div>
        </div>

        <div class="col-lg-6 col-sm-6 col-12">
            <label for="main" class="form-label">main</label>
            <input type="file" class="form-control" name="main" id="main" placeholder="main" value="main_value"  input_add>
            <div class="invalid-feedback">
                Valid main is .
            </div>
        </div>

        <div class="col-lg-6 col-sm-6 col-12">
            <label for="file_u" class="form-label">file_u</label>
            <input type="file" class="form-control" name="file_u" id="file_u" placeholder="file_u" value="file_u_value"   multiple="multiple">
            <div class="invalid-feedback">
                Valid file_u is .
            </div>
        </div>

table_inputs    </div>

    <hr class="my-4">

    <button class="w-100 btn btn-primary btn-lg" type="submit">add</button>
</form>
<%- include ("layouts/footer.ejs") %>


