
<%- include ("layouts/header.ejs") %>


<h2 class="mb-3">waiting list </h2>                                <div class="d-flex flex-row-reverse">
                                    <a class="btn btn-sm btn-primary col-lg-2 p-2 m-2" href="/waiting/add">Nouveau</a>
                                </div>
<div class="row">
    <% if (typeof (waiting) != "undefined" &&  waiting.length > 0 ) {
    for(let i = 0; i<waiting.length; i++) {
    %>
        <div class="col-lg-4 text-center mb-3"> 
            <img class="bd-placeholder-img rounded-circle" width="140" height="140" src="/img/default.png"/>
            <h3 class="fw-normal"><%= waiting[i].waiting_title%></h3>
            <p class="text-truncate"><%= waiting[i].waiting_content%></p>
            <p><a class="btn btn-secondary" href="/waiting/<%= waiting[i].waiting_id%>/details">Details </a></p>
        </div>
    <% }
    }%>
</div>
<%- include ("layouts/footer.ejs") %>


